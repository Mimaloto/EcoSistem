<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ecosistem"
    android:backgroundTintMode="add"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MoreStatisticsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Usuario:"
            android:textColor="#E0EAE5"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="TextView"
            android:textColor="#85EFBA"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detalle reciclado Plastico "
            android:textAlignment="center"
            android:textColor="#85EFBA"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TableLayout
            android:id="@+id/TablePlastico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#8A1E88E5">

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:text="Mes"
                    android:textAlignment="center"
                    android:textColor="#85EFBA"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="97dp"
                    android:layout_height="wrap_content"
                    android:text="Cantidad (Kg)"
                    android:textAlignment="center"
                    android:textColor="#85EFBA"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Precio "
                    android:textAlignment="center"
                    android:textColor="#85EFBA"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="94dp"
                    android:layout_height="wrap_content"
                    android:text="Promedio"
                    android:textAlignment="center"
                    android:textColor="#85EFBA"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </TableRow>

        </TableLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView36"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detalle reciclado Papel "
            android:textAlignment="center"
            android:textColor="#85EFBA"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TableLayout
            android:id="@+id/TablePapel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#B9D39191">

                <TextView
                    android:id="@+id/textView38"
                    android:layout_width="94dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Mes"
                    android:textAlignment="center"
                    android:textColor="#85EFBA"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView39"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Cantidad
                    (Kg)"
                    android:textAlignment="center"
                    android:textColor="#85EFBA"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView31"
                    android:layout_width="84dp"
                    android:layout_height="wrap_content"
                    android:text="Precio "
                    android:textAlignment="center"
                    android:textColor="#85EFBA"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView32"
                    android:layout_width="88dp"
                    android:layout_height="wrap_content"
                    android:text="Promedio"
                    android:textAlignment="center"
                    android:textColor="#85EFBA"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </TableRow>

        </TableLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="385dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detalle reciclado Vidrio "
            android:textAlignment="center"
            android:textColor="#85EFBA"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TableLayout
            android:id="@+id/TableVidrio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#813E29">

                <TextView
                    android:id="@+id/textView50"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:text="Mes"
                    android:textAlignment="center"
                    android:textColor="#85EFBA"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView56"
                    android:layout_width="97dp"
                    android:layout_height="wrap_content"
                    android:text="Cantidad (Kg)"
                    android:textAlignment="center"
                    android:textColor="#85EFBA"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView96"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Precio "
                    android:textAlignment="center"
                    android:textColor="#85EFBA"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView85"
                    android:layout_width="94dp"
                    android:layout_height="wrap_content"
                    android:text="Promedio"
                    android:textAlignment="center"
                    android:textColor="#85EFBA"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </TableRow>

        </TableLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:background="#94604019"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.26">

            <Button
                android:id="@+id/button40"
                android:layout_width="wrap_content"
                android:layout_height="91dp"
                android:layout_weight="1"
                android:background="#02FFFFFF"
                android:maxHeight="80dp"
                android:text="Atras"
                android:textColor="#86F0BB"
                app:icon="@drawable/baseline_arrow_back_24"
                app:iconSize="35dp"
                app:iconTint="#86F0BB" />

            <Button
                android:id="@+id/button41"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#03FFFFFF"
                android:maxHeight="80dp"
                android:text="Inicio"
                android:textColor="#86F0BB"
                app:icon="@drawable/baseline_home_24"
                app:iconSize="35dp"
                app:iconTint="#86F0BB" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="91dp"
                android:layout_weight="1"
                android:background="#027DE51A"
                android:text="Next"
                android:textColor="#86F0BB"
                app:icon="@drawable/baseline_arrow_forward_24"
                app:iconSize="35dp"
                app:iconTint="#86F0BB" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>