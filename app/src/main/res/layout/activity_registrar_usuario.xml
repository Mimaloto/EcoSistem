<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ecosistem"
    tools:context=".RegistrarUsuarioActivity">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/name_user"
        android:layout_width="262dp"
        android:layout_height="57dp"
        android:layout_marginTop="222dp"
        android:background="#0086F0BB"
        android:hint="Nombre Completo"
        android:textAlignment="center"
        android:textColorHint="#404040"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:startIconDrawable="@drawable/baseline_person_24"
        app:startIconTint="#0E0E0D">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#BC86F0BB"
            android:inputType="text" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/email_user"
        android:layout_width="266dp"
        android:layout_height="56dp"
        android:layout_marginTop="275dp"
        android:background="#BC86F0BB"
        android:hint="Correo Electronico"
        android:textColorHint="#242522"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:passwordToggleTint="#171915"
        app:startIconDrawable="@drawable/baseline_mark_email_read_24"
        app:startIconTint="#10120F">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:textColorHint="#151212" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/phone_user"
        android:layout_width="270dp"
        android:layout_height="53dp"
        android:layout_marginTop="330dp"
        android:layout_marginBottom="340dp"
        android:background="#BC86F0BB"
        android:hint="Telefono"
        android:textColorHint="#181918"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:passwordToggleTint="#7DE51A"
        app:startIconDrawable="@drawable/baseline_phone_24"
        app:startIconTint="#1D1E1C">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/password1_user"
        android:layout_width="270dp"
        android:layout_height="62dp"
        android:layout_marginBottom="40dp"
        android:background="#BC86F0BB"
        android:hint="Contraseña"
        app:endIconMode="password_toggle"
        app:hintTextColor="#201A1A"
        app:layout_constraintBottom_toTopOf="@+id/btncreac"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_user"
        app:passwordToggleTint="#231C1C"
        app:startIconDrawable="@drawable/baseline_lock_24">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="278dp"
            android:layout_height="62dp"
            android:inputType="textPassword" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/password2_user"
        android:layout_width="268dp"
        android:layout_height="60dp"
        android:background="#BC86F0BB"
        android:hint="Repita la Contraseña"
        app:endIconMode="password_toggle"
        app:layout_constraintBottom_toTopOf="@+id/btncreac"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.919"
        app:passwordToggleTint="#191818"
        app:startIconDrawable="@drawable/baseline_lock_24">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="269dp"
            android:layout_height="73dp"
            android:inputType="textPassword" />
    </com.google.android.material.textfield.TextInputLayout>


    <CheckBox
        android:id="@+id/cbTerminos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="510dp"
        android:layout_marginEnd="80dp"
        android:text="Acepta terminos y condiciones"
        android:textAlignment="textStart"
        android:textColor="#7DE51A"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btncreac"
        android:layout_width="186dp"
        android:layout_height="59dp"
        android:backgroundTint="#87F1BC"
        android:text="Crear Cuenta"
        android:textColor="#05160E"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.818" />

    <Button
        android:id="@+id/btnretunru"
        android:layout_width="133dp"
        android:layout_height="48dp"
        android:backgroundTint="#87F1BC"
        android:text="Atras"
        android:textColor="#05160E"
        android:textSize="20sp"
        android:textStyle="bold"
        app:icon="@drawable/baseline_arrow_back_24"
        app:iconPadding="10dp"
        app:iconTint="#072219"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.942"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.927" />

</androidx.constraintlayout.widget.ConstraintLayout>

