<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/ecosistem"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:scrollIndicators="top"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ecosistem" />

    <EditText
        android:id="@+id/ediTextemailac"
        android:layout_width="286dp"
        android:layout_height="51dp"
        android:background="#C8FFFFFF"
        android:hint="Correo"
        android:inputType="textEmailAddress"
        android:scrollbarAlwaysDrawHorizontalTrack="false"
        android:scrollHorizontally="false"
        android:textAlignment="center"
        android:textColorHint="#0B0B0B"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/ediTextpasswordac"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.947" />


    <EditText
        android:id="@+id/ediTextpasswordac"
        android:layout_width="287dp"
        android:layout_height="54dp"
        android:layout_marginBottom="16dp"
        android:background="#C8FFFFFF"
        android:hint="Contraseña"
        android:inputType="numberPassword"
        android:textAlignment="center"
        android:textColorHint="#101010"
        android:textSize="24sp"
        android:textStyle="bold"
        app:endIconMode="password_toggle"
        app:icon="@drawable/baseline_lock_24"
        app:layout_constraintBottom_toTopOf="@+id/texvolvdc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/texvolvdc"
        android:layout_width="159dp"
        android:layout_height="15dp"
        android:layout_marginBottom="24dp"
        android:background="#C8FFFFFF"
        android:backgroundTint="#9CFFFFFF"
        android:hint="¿Olvidaste tu contraseña?"
        android:textAlignment="center"
        android:textColorHint="#101010"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnins"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.464"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnins"
        android:layout_width="214dp"
        android:layout_height="67dp"
        android:layout_marginBottom="216dp"
        android:allowUndo="false"
        android:backgroundTint="#87F1BC"
        android:checkable="false"
        android:cursorVisible="false"
        android:defaultFocusHighlightEnabled="false"
        android:elegantTextHeight="false"
        android:text="Iniciar Sesion"
        android:textAlignment="center"
        android:textColor="#1C1818"
        android:textSize="20sp"
        android:textStyle="bold"
        app:icon="@drawable/baseline_lock_open_24"
        app:iconPadding="10dp"
        app:iconTint="#04140D"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="#6E1313" />

    <Button
        android:id="@+id/btncrearct"
        android:layout_width="215dp"
        android:layout_height="59dp"
        android:layout_marginBottom="96dp"
        android:allowUndo="false"
        android:backgroundTint="#87F1BC"
        android:checkable="false"
        android:cursorVisible="false"
        android:defaultFocusHighlightEnabled="false"
        android:elegantTextHeight="false"
        android:text="Crear Cuenta"
        android:textAlignment="center"
        android:textColor="#1C1818"
        android:textSize="20sp"
        android:textStyle="bold"
        app:icon="@drawable/baseline_north_24"
        app:iconPadding="10dp"
        app:iconTint="#071814"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnins"
        app:layout_constraintVertical_bias="0.327"
        app:strokeColor="#6E1313" />

</androidx.constraintlayout.widget.ConstraintLayout>